<!-- thanks -->
<script>
const search = location.href.substring(1).split("?")[1];
if (search) {
	const formpost = querystring.parse(search);
	let displayresultHTML = `<ul class="displayresult">`;
	const label = {"fullname":"Full name", "firstname":"First name", "lastname":"Last name", "email":"Email", "tel":"Phone", "message":"Message"};
	for (name in formpost) {
		displayresultHTML += `<li>${label[name] || name.charAt(0).toUpperCase() + name.slice(1)}: ${formpost[name]}</li>`;
	}
	displayresultHTML += `</ul>`;

	let content = "";
	content += `<p class="received">We received your message.</p><p>You have entered:</p>${displayresultHTML}`;
	content += `<div><p>The information has been saved in our database.</p></div>`;

	document.write(`\n<div class="row"><div class="col">${content}</div></div>\n`);
}
</script>

